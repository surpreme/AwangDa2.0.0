<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="69dp"
    android:background="@color/white">
    <!--    app:layout_constraintBottom_toTopOf="@id/balance_title_tv"-->
    <!--    app:layout_constraintEnd_toStartOf="@+id/balance_line"-->
    <!--    app:layout_constraintHorizontal_bias="0.5"-->
    <!--    app:layout_constraintStart_toStartOf="parent"-->
    <!--    app:layout_constraintTop_toTopOf="parent"-->
    <TextView
        android:id="@+id/balance_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="2102.00元"
        android:textColor="@color/orangeDark"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@+id/gold_price_tv"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/balance_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="余额"
        android:textColor="@color/grayDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/balance_price_tv"
        app:layout_constraintRight_toRightOf="@id/balance_price_tv" />

    <View
        android:id="@+id/balance_line"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#EEEEEE"
        app:layout_constraintLeft_toRightOf="@id/balance_price_tv"
        app:layout_constraintRight_toLeftOf="@id/gold_price_tv" />

    <TextView
        android:id="@+id/gold_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="2102.00元"
        android:textColor="@color/blue"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@+id/integral_price_tv"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/balance_price_tv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/gold_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="金币"
        android:textColor="@color/grayDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/gold_price_tv"
        app:layout_constraintRight_toRightOf="@id/gold_price_tv" />

    <View
        android:id="@+id/gold_line"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#EEEEEE"
        app:layout_constraintLeft_toRightOf="@id/gold_price_tv"
        app:layout_constraintRight_toLeftOf="@id/integral_price_tv" />
    <!--    app:layout_constraintBottom_toTopOf="@id/balance_title_tv"-->
    <!--    app:layout_constraintStart_toEndOf="@+id/gold_line"-->

    <TextView
        android:id="@+id/integral_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="2102.00元"
        android:textColor="#E327C2"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/gold_price_tv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/integral_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="积分"
        android:textColor="@color/grayDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/integral_price_tv"
        app:layout_constraintRight_toRightOf="@id/integral_price_tv" />


</androidx.constraintlayout.widget.ConstraintLayout>
