<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar_lls"
        layout="@layout/toolbar_layout" />

    <ImageView
        android:id="@+id/qrbar_iv"
        android:layout_width="217dp"
        android:layout_height="214dp"
        android:layout_marginTop="52dp"
        android:padding="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_lls"
        tools:src="@color/grayDark" />

    <TextView
        android:id="@+id/url_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/qrbar_iv"
        tools:text="链接：http://awangda.aitecc.com" />

    <Button
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="38dp"
        android:background="@drawable/main_theme_background_rectangle"
        android:text="返回"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/url_tv" />
</androidx.constraintlayout.widget.ConstraintLayout>
