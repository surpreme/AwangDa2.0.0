<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="303dp"
    android:layout_height="128dp"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="303dp"
        android:layout_height="128dp">

        <ImageView
            android:id="@+id/shop_iv"
            android:layout_width="22dp"
            android:layout_height="19dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:src="@mipmap/shop_logoaw"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/shop_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:text="自营店铺"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/shop_iv"
            app:layout_constraintLeft_toRightOf="@id/shop_iv"
            app:layout_constraintTop_toTopOf="@id/shop_iv" />

        <ImageView
            android:id="@+id/close_iv"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginRight="21dp"
            android:src="@mipmap/close_logo_aw"
            app:layout_constraintBottom_toBottomOf="@id/shop_iv"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/shop_iv" />

        <EditText
            android:id="@+id/price_et"
            android:layout_width="253dp"
            android:layout_height="27dp"
            android:layout_marginLeft="31dp"
            android:background="@drawable/empty_rectangle_gray"
            android:hint="请输入支付价格…"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/type_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="22dp"
            android:text="优惠券"
            android:textColor="#ff000000"
            android:textSize="15sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/price_et" />

        <TextView
            android:id="@+id/discount_information_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="36dp"
            android:text="满100减30"
            android:textColor="#ffff4401"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/type_title_tv"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/type_title_tv" />

        <ImageView
            android:id="@+id/down_iv"
            android:layout_width="9dp"
            android:layout_height="4dp"
            android:src="@mipmap/down_awd"
            android:tint="@color/orangeDark"
            app:layout_constraintBottom_toBottomOf="@id/discount_information_tv"
            app:layout_constraintLeft_toRightOf="@id/discount_information_tv"
            android:layout_marginLeft="5dp"
            app:layout_constraintTop_toTopOf="@id/discount_information_tv" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
