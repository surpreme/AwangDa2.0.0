<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="出马"
        android:textColor="#051B28"
        android:textSize="15sp" />

    <com.aite.awangdalibrary.view.LabelsView
        android:id="@+id/labels"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:labelsBackground="@drawable/default_label_bg"
        app:labelsTextColor="@color/goodsspectxt_color"
        app:labelsTextPaddingBottom="5dp"
        app:labelsTextPaddingLeft="10dp"
        app:labelsTextPaddingRight="10dp"
        app:labelsTextPaddingTop="5dp"
        app:labelsTextSize="13sp"
        app:lineMargin="10dp"
        app:maxSelect="1"
        app:selectType="SINGLE"
        android:layout_marginBottom="10dp"
        app:wordMargin="15dp" />
</LinearLayout>
