<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/date_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="41dp"
            android:layout_marginTop="25dp"
            android:text="时间"
            android:textColor="#ff444444"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/date_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="12:00"
            android:textColor="#ff444444"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/date_title_tv"
            app:layout_constraintRight_toRightOf="@id/date_title_tv"
            app:layout_constraintTop_toBottomOf="@id/date_title_tv" />

        <TextView
            android:id="@+id/convert_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="兑换余额"
            android:textColor="#ff444444"
            android:textSize="12sp"
            android:textStyle="bold"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/convert_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="999"
            android:textColor="#ff444444"
            android:textSize="12sp"
            android:textStyle="bold"

            app:layout_constraintLeft_toLeftOf="@id/convert_title_tv"
            app:layout_constraintRight_toRightOf="@id/convert_title_tv"
            app:layout_constraintTop_toBottomOf="@id/convert_title_tv" />

        <TextView
            android:id="@+id/balance_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginRight="41dp"
            android:text="当前余额"
            android:textColor="#ff444444"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/balance_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="999"
            android:textColor="#ff444444"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/balance_title_tv"
            app:layout_constraintRight_toRightOf="@id/balance_title_tv"
            app:layout_constraintTop_toBottomOf="@id/balance_title_tv" />

        <LinearLayout
            android:id="@+id/convert_current_title_ll"
            android:layout_width="0dp"
            android:layout_height="47dp"
            android:layout_marginTop="21dp"
            android:background="@drawable/main_theme_background_one_empty"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/gold_current_title_ll"
            app:layout_constraintTop_toBottomOf="@id/balance_content_tv">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="兑换金币"
                android:textColor="#ffffffff"
                android:textSize="9sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="888金币"
                android:textColor="#ffffffff"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/gold_current_title_ll"
            android:layout_width="0dp"
            android:layout_height="47dp"
            android:layout_marginTop="21dp"
            android:background="@drawable/main_theme_background_right_one_empty"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintLeft_toRightOf="@id/convert_current_title_ll"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/balance_content_tv">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前金币"
                android:textColor="#ffffffff"
                android:textSize="9sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="888金币"
                android:textColor="#ffffffff"
                android:textSize="12sp" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>
